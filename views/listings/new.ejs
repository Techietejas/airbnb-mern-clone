<% layout("/layouts/boilerplate") %>
  <body>

    <div class="row mt-3">
      <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
          <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <lable for="title" class="form-lable">Title</lable>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
      <div class="valid-feedback">Title looks good!</div>
      </div>

      <div class="mb-3">
        <lable for="discription" class="form-lable">Description</lable>
        <textarea
        name="listing[description]"
        class="form-control"
        required>
      </textarea>
      <div class="invalid-feedback">Enter valid discription</div>
      </div>
      
      <div class="mb-3">
        <lable for="image" class="form-label" >Upload Listing Image</lable>
        <input name="listing[image]" type="file" class="form-control">
        required
      </div>

      <div class="mb-3">
        <lable for="price" class="form-label">Price</lable> <br>
        <input name="listing[price]" placeholder="enter price" class="form-cortrol">
        <div class="invalid-feedback">Enter valid price</div>
      </div>


      <div class="mb-3">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
        <div class="invalid-feedback">Please Enter valid country</div>
      </div>

      <div class="mb-3">
      <lable for="location" class="form-label">Location</lable>
      <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
      <div class="invalid-feedback">Please Enter valid location</div>
      </div>
      <button class="btn btn-dark add-btn mt-3 mb-3">Add</button>
    </form>
    </div>

    </div>
    <script src="/js/script.js"></script>
  </body>

